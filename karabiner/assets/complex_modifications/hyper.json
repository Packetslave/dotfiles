{
  "title": "Tapping right-shift produces hyper.",
  "rules": [
    {
      "description": "Press right_shift alone produces F20",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f20"
            }
          ]
        }
      ]
    }
}
