#
## My zshrc
##

function mylog ()
{
  if [[ $- == *i* ]]
  then
    echo "[zsh] $1"
  fi
}

#
# Local config
#

if [[ -f $HOME/.zshrc.before ]] ; then
  . $HOME/.zshrc.before
  mylog ".zshrc.before loaded"
fi

#
# FZF for history search and whatnot
#

if [[ -f $HOME/.fzf.zsh ]] ; then
  . $HOME/.fzf.zsh
  mylog "FZF enabled"
fi

#
# History configs
# 

HISTSIZE=500000
SAVEHIST=5000000
HISTFILE=~/.zsh_history
setopt APPEND_HISTORY
setopt EXTENDED_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_VERIFY
setopt INC_APPEND_HISTORY
setopt SHARE_HISTORY

#
# Paths
#
function add_path() {
  if [[ -z "$1" ]] ; then
    return 
  fi
  if [[ -d "$1" ]] ; then
    export PATH="$1":$PATH
  fi
}
add_path $HOME/.brew/bin

#
# Prompt
#
if [[ -d "$HOME/src/spaceship-prompt" ]] ; then
  if [[ ! -L "$HOME/src/spaceship-prompt/prompt_spaceship_setup" ]] ; then
    ln -sf $HOME/src/spaceship-prompt/spaceship.zsh $HOME/src/spaceship-prompt/prompt_spaceship_setup
  fi
else
  mylog "WARNING: spaceship-prompt is not installed"
  mylog "cd ~/src && git clone https://github.com/denysdovhan/spaceship-prompt.git"
fi

fpath=( "$HOME/src/spaceship-prompt" $fpath )
autoload -U promptinit; promptinit

prompt spaceship

#
# Local config
#

if [[ -f $HOME/.zshrc.after ]] ; then
  . $HOME/.zshrc.after
  mylog ".zshrc.after loaded"
fi
